@using Microsoft.AspNetCore.Identity
@using Finalizer.Data
@inject SignInManager<RegisteredUser> SignInManager
@inject UserManager<RegisteredUser> UserManager

@{
    ViewData["Title"] = "Home Page";
}
@{Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Finalizer</title>
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css" crossorigin="anonymous" integrity="sha256-eSi1q2PG6J7g7ib17yAaWMcrr5GrtohYChqibrV7PBE=" />
    <link href="https://fonts.googleapis.com/css?family=Nunito" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="boxPath">
    <nav class="navbar sticky-top navbar-expand-sm navbar-toggleable-sm navbar-light bg-transparent box-shadow"  id="home-nav">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>

                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Finalizer</a>
            </div>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <partial name="_LoginPartial" />
                <ul class="nav navbar-nav flex-grow-1">

                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Shop" asp-action="Index">Shop Guitars</a>
                    </li>
                </ul>

            </div>
            <form action="/search" method="get" class="form-inline">
                <div class="input-group">
                    <input class="form-control" type="search" placeholder="Search" aria-label="Search" name="searchTerm">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary searchBTN" type="submit"><img class="img-fluid" src="~/images/twotone-search-24px.svg" /></button>
                    </div>
                </div>
            </form>
        </div>
    </nav>
    <div style="text-align:center">

        <div class="gridlayout">
            <div class="box1 boxPath2">
                <img src="~/images/es355home.png" class="img-fluid">
                <h1>ARE YOU READY TO ROCK?</h1>
                <div>
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <a asp-controller="shop" asp-action="index" class="text-dark">Shop Now</a>
                    }
                    else
                    {
                        <a asp-controller="quiz" asp-action="index" class="text-dark">Take Our Quiz!</a>
                    }
                </div>
            </div>
            <div class="box2">
                <img class="img-fluid homeZ" src="~/images/es355homeSKELV2.png">

            </div>

        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js" crossorigin="anonymous" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.bundle.min.js" crossorigin="anonymous" integrity="sha256-E/V4cWE4qvAeO5MOhjtGtqDzPndRO1LBk8lJ/PR7CA4="></script>
    <script src="~/js/site.js"></script>

  
</body>

</html>
