@using Microsoft.AspNetCore.Identity
@using Finalizer.Data
@inject SignInManager<RegisteredUser> SignInManager
@inject UserManager<RegisteredUser> UserManager

@{
    ViewData["Title"] = "Home Page";
}
@{Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Finalizer</title>
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css" crossorigin="anonymous" integrity="sha256-eSi1q2PG6J7g7ib17yAaWMcrr5GrtohYChqibrV7PBE=" />
    <link href="https://fonts.googleapis.com/css?family=Nunito" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
    <body class="boxPath">
        <nav class="navbar sticky-top navbar-expand-sm navbar-toggleable-sm navbar-light bg-transparent box-shadow">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>

                    </button>
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Finalizer</a>
                </div>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="nav navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Shop" asp-action="Index">Shop Guitars</a>
                        </li>
                    </ul>

                </div>
                <form action="/search" method="get" class="form-inline my-2 my-lg-0">
                    <input class="form-control m-1 input-group-prepend" type="search" placeholder="Search" aria-label="Search" name="searchTerm">
                    <button class="btn btn-outline-dark my-2 my-sm-1" type="submit">Search</button>
                </form>
            </div>
        </nav>
        <div style="text-align:center">

            <div class="gridlayout">
                <div class="box1 boxPath2">
                    <img src="~/images/es355home.png" class="img-fluid">
                    <h1>ARE YOU READY TO ROCK?</h1>
                    <div>
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <a asp-controller="shop" asp-action="index" class="text-dark">Shop Now</a>
                        }
                        else
                        {
                            <a asp-controller="quiz" asp-action="index" class="text-dark">Take Our Quiz!</a>
                        }
                    </div>
                </div>
                <div class="box2">
                    <img class="img-fluid homeZ" src="~/images/es355homeSKELV2.png">

                </div>

            </div>
        </div>
    </body>

</html>